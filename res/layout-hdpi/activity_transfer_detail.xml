<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbg" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/back_button" >
        </Button>

        <TextView
            android:id="@+id/title"
            style="@style/white_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="交易详情"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/receipt_bg"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dip"
                android:layout_marginRight="34dip"
                android:layout_marginTop="10dip"
                android:shrinkColumns="1"
                android:stretchColumns="1" >
            </TableLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dip"
                android:layout_marginRight="34dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/receipt_inner_bg"
                android:shrinkColumns="1"
                android:stretchColumns="1" >

                <TableRow android:layout_marginTop="5dip" >

                    <TextView
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dip"
                        android:text="卡号:" />

                    <TextView
                        android:id="@+id/cardnum"
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="4dip"
                        android:text="08/14" />
                </TableRow>

                <TableRow android:layout_marginTop="5dip" >

                    <TextView
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dip"
                        android:text="交易日期:" />

                    <TextView
                        android:id="@+id/tradedate"
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="4dip"
                        android:text="2012080912249002" />
                </TableRow>

                <TableRow android:layout_marginTop="5dip" >

                    <TextView
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dip"
                        android:text="交易类型:" />

                    <TextView
                        android:id="@+id/tradetype"
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="4dip"
                        android:text="234023488" />
                </TableRow>

                <TableRow android:layout_marginTop="5dip" >

                    <TextView
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dip"
                        android:text="发卡机构:" />

                    <TextView
                        android:id="@+id/cardadress"
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="4dip"
                        android:text="0925982043" />
                </TableRow>

                <TableRow android:layout_marginTop="5dip" >

                    <TextView
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dip"
                        android:text="交易时间:" />

                    <TextView
                        android:id="@+id/tradetime"
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="4dip" />
                </TableRow>

                <TableRow android:layout_marginTop="5dip" >

                    <TextView
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dip"
                        android:text="卡类型" />

                    <TextView
                        android:id="@+id/cardtype"
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="4dip"
                        android:text="" />
                </TableRow>

                <TableRow android:layout_marginTop="5dip" >

                    <TextView
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dip"
                        android:text="交易金额:" />

                    <TextView
                        android:id="@+id/tradetotal"
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="4dip"
                        android:text="" />
                </TableRow>

                <TableRow android:layout_marginTop="5dip" >

                    <TextView
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dip"
                        android:text="交易状态:" />

                    <TextView
                        android:id="@+id/tradestatus"
                        style="@style/black_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingLeft="10dip"
                        android:paddingRight="4dip"
                        android:text="" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>