<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sawtooth_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/phoneTV"
            style="@style/TextView14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="注册号码：15011302090" />

        <TextView
            android:id="@+id/timeTV"
            style="@style/TextView14sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="2013-10-08" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/pwd_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            style="@style/TextView16sp_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户密码" />

        <EditText
            style="@style/TextView16sp_black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="#00000000"
            android:hint="请输入六位商户密码" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pwd_logo" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        style="@style/TextView18sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/btn_confirm"
        android:text="结	算" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/tips_bg"
        android:orientation="vertical" >

        <TextView
            style="@style/TextView18_1sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginTop="30dip"
            android:text="使用说明" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextView14sp_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1、" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="您可快速得到您当前批次的交易结果，了解您的收益情况。" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextView14sp_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2、" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="在您结算之后，请您重新签到才能进行其他交易。" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
