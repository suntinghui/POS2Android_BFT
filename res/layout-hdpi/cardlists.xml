<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dip"
    android:paddingTop="10dip"
    android:stretchColumns="1" >

    <TableRow android:layout_marginTop="5dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="交易类型："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tradetype"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:layout_marginTop="5dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="卡类型："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:layout_marginTop="5dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="卡号："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:layout_marginTop="5dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="发卡机构："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/instflag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:layout_marginTop="5dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="交易金额："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/amttrans"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:layout_marginTop="5dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="交易日期："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:layout_marginTop="5dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="交易状态："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>

</TableLayout>